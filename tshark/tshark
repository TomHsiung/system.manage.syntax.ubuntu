# capture 10000 packets on eth0 and derive to a file in the format of pcap
tshark -i eth0 -w /path/captured.pcap -c 10000 -F pcap

# capture 10000 packets on eth0 and derive to a file in the format of pcap for a specified host
tshark -i eth0 -w /path/captured.pcap -c 10000 -F pcap -f "host 192.168.0.1"
