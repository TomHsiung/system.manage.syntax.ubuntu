# Add a repository
add-apt-repository repository-name

# Get update packages
apt update

# Update a specific package
apt --only-upgrade install package-name

# Execute update installation
apt upgrade

# Show package dependences
apt-cache show pkg.name

# Check if a package is installed
atp-cache policy pkg.name

# Remove everything regarding the pakcage. Useful when you want to reinstall again
apt purge --auto-remove pkg.name
